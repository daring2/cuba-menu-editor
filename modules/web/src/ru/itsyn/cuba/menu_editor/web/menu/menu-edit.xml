<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/screen/window.xsd" caption="msg://editorCaption" focusComponent="form"
        messagesPack="ru.itsyn.cuba.menu_editor.web.menu">
    <data>
        <instance id="editDc" class="ru.itsyn.cuba.menu_editor.entity.MenuEntity" view="_local">
            <loader/>
        </instance>
        <collection id="itemsDc" class="ru.itsyn.cuba.menu_editor.entity.MenuItemEntity">
            <loader id="itemsDl"/>
        </collection>
    </data>
    <dialogMode height="768" width="1024"/>
    <layout expand="split" spacing="true">
        <split id="split" orientation="horizontal" pos="50">
            <vbox expand="editActions" height="100%" width="100%" margin="true" spacing="true">
                <form id="form" dataContainer="editDc" width="100%">
                    <column width="100%">
                        <textField id="nameField" property="name"/>
                    </column>
                    <column width="100%">
                        <textField id="codeField" property="code"/>
                    </column>
                </form>
                <textArea dataContainer="editDc" property="description" width="100%" rows="3"
                          caption="msg://ru.itsyn.cuba.menu_editor.entity/MenuEntity.description"/>
<!--                <textArea dataContainer="editDc" property="config" width="100%" rows="15"-->
<!--                          caption="msg://ru.itsyn.cuba.menu_editor.entity/MenuEntity.config"/>-->
                <hbox id="editActions" spacing="true">
                    <button action="windowCommitAndClose"/>
                    <button action="windowCommit"/>
                    <button action="windowClose"/>
                </hbox>
            </vbox>
            <vbox expand="itemsTable" height="100%" width="100%" margin="true" spacing="true">
                <treeTable id="itemsTable" dataContainer="itemsDc" hierarchyProperty="parent" width="100%">
                    <actions>
                        <action id="create" type="create"/>
                        <action id="edit" type="edit"/>
                        <action id="remove" type="remove"/>
                    </actions>
                    <columns>
                        <column id="caption"/>
                        <column id="screen"/>
                    </columns>
                    <buttonsPanel alwaysVisible="true">
                        <button action="itemsTable.create"/>
                        <button action="itemsTable.edit"/>
                        <button action="itemsTable.remove"/>
                    </buttonsPanel>
                </treeTable>
            </vbox>
        </split>
    </layout>
</window>
